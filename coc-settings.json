{
  "diagnostic.errorSign": "✖",
  "diagnostic.warningSign": "⚑",
  "diagnostic.infoSign": "⚑",
  "diagnostic.hintSign": "⚑",
  "suggest.noselect": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "typescript",
    "typescriptreact",
    "typescript.tsx",
    "json",
    "javascriptreact"
  ],
  "tsserver.formatOnType": false,
  "cSpell.userWords": [
    "Ngomana",
    "Tengo",
    "neumorph",
    "reduxjs"
  ],
  //explorer

  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.file.hiddenRules": {
    "filenames": ["node_modules", ".git"]
  }
}
